<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:paddingLeft="16dp"
    android:paddingTop="16dp">

    <TextView
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_about"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detail_app"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_libs"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/retrofit"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gson"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/butter_knife"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/picasso"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_developer"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name_developer"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_marginRight="16dp"
        android:layout_height="1dp"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email_developer"/>

</LinearLayout>